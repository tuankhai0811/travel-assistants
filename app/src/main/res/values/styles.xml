<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontPath">@string/font_boto_regular</item>
    </style>

    <style name="text_type_travel">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/global_white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_type_travel_2">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/global_white</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Theme.Slider.Sliderable" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <!-- These values must be set for this mechanism to work -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--<item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
        <!--<item name="android:statusBarColor">@color/colorPrimary</item>-->
        <!--<item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyExpandedTitle" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/global_white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MyTextViewReview" parent="">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/grey_80</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyProgressBarReview" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_marginLeft">@dimen/margin_4dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:max">100</item>
        <item name="android:progress">25</item>
        <item name="android:progressBackgroundTint">@color/transparent</item>
        <item name="android:progressTint">@color/colorPrimary</item>
    </style>

    <style name="MyTitleDetail">aa</style>

</resources>
