<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_content_reviews"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/params_15dp"
    android:orientation="vertical"
    android:visibility="visible">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dilivers_view"
        android:background="@color/grey_dilivers" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/global_white"
        android:clickable="true"
        android:foreground="@drawable/ripple"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/params_16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/params_5dp"
            android:text="@string/rating_here"
            android:textAllCaps="false"
            android:textColor="@color/global_black"
            android:textSize="@dimen/size_18sp" />

        <com.tuankhai.travelassistants.library.ratingbar.MaterialRatingBar
            android:id="@+id/ratingBarSelect"
            style="@style/Widget.MaterialRatingBar.RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-3dp"
            android:layout_marginRight="-3dp"
            android:max="5"
            android:maxHeight="@dimen/height_32dp"
            android:minHeight="@dimen/height_32dp"
            android:progressBackgroundTint="@color/random_2"
            android:rating="0"
            android:stepSize="1"
            app:mrb_progressTint="@color/random_2"
            app:mrb_secondaryProgressTint="@color/random_2" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dilivers_view"
        android:background="@color/grey_dilivers" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/global_white"
        android:focusable="true"
        android:foreground="@drawable/ripple">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_rating_view"
                    fontPath="@string/font_boto_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4,5"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/size_36sp"
                    android:textStyle="bold" />

                <com.tuankhai.travelassistants.library.ratingbar.MaterialRatingBar
                    android:id="@+id/ratingBarView"
                    style="@style/Widget.MaterialRatingBar.RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginRight="-3dp"
                    android:isIndicator="true"
                    android:maxHeight="@dimen/height_22dp"
                    android:minHeight="@dimen/height_22dp"
                    android:progressBackgroundTint="@color/grey_50"
                    android:progressTint="@color/grey_50"
                    android:rating="0"
                    app:mrb_progressTint="@color/grey_50"
                    app:mrb_secondaryProgressTint="@color/grey_50" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="@dimen/params_5dp">

                    <TextView
                        android:id="@+id/num_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingBottom="@dimen/params_3dp"
                        android:paddingRight="@dimen/params_3dp"
                        android:text="8"
                        android:textColor="@color/grey_70"
                        android:textSize="@dimen/size_14sp" />

                    <ImageView
                        android:layout_width="@dimen/width_16dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        app:srcCompat="@drawable/ic_comment" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/params_10dp"
                android:paddingTop="@dimen/params_10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_24dp"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/params_2dp"
                    android:paddingLeft="@dimen/params_10dp"
                    android:paddingRight="@dimen/params_20dp"
                    android:paddingTop="@dimen/params_2dp">

                    <TextView
                        style="@style/MyTextViewReview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="5" />

                    <ImageView
                        android:layout_width="@dimen/width_14dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/params_4dp"
                        android:layout_marginRight="@dimen/params_4dp"
                        app:srcCompat="@drawable/ic_star_black_24dp" />

                    <ProgressBar
                        android:id="@+id/progressBar_5"
                        style="@style/MyProgressBarReview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_24dp"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/params_2dp"
                    android:paddingLeft="@dimen/params_10dp"
                    android:paddingRight="@dimen/params_20dp"
                    android:paddingTop="@dimen/params_2dp">

                    <TextView
                        style="@style/MyTextViewReview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="4" />

                    <ImageView
                        android:layout_width="@dimen/width_14dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/params_4dp"
                        android:layout_marginRight="@dimen/params_4dp"
                        app:srcCompat="@drawable/ic_star_black_24dp" />

                    <ProgressBar
                        android:id="@+id/progressBar_4"
                        style="@style/MyProgressBarReview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_24dp"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/params_2dp"
                    android:paddingLeft="@dimen/params_10dp"
                    android:paddingRight="@dimen/params_20dp"
                    android:paddingTop="@dimen/params_2dp">

                    <TextView
                        style="@style/MyTextViewReview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="3" />

                    <ImageView
                        android:layout_width="@dimen/width_14dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/params_4dp"
                        android:layout_marginRight="@dimen/params_4dp"
                        app:srcCompat="@drawable/ic_star_black_24dp" />

                    <ProgressBar
                        android:id="@+id/progressBar_3"
                        style="@style/MyProgressBarReview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_24dp"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/params_2dp"
                    android:paddingLeft="@dimen/params_10dp"
                    android:paddingRight="@dimen/params_20dp"
                    android:paddingTop="@dimen/params_2dp">

                    <TextView
                        style="@style/MyTextViewReview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="2" />

                    <ImageView
                        android:layout_width="@dimen/width_14dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/params_4dp"
                        android:layout_marginRight="@dimen/params_4dp"
                        app:srcCompat="@drawable/ic_star_black_24dp" />

                    <ProgressBar
                        android:id="@+id/progressBar_2"
                        style="@style/MyProgressBarReview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_24dp"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/params_2dp"
                    android:paddingLeft="@dimen/params_10dp"
                    android:paddingRight="@dimen/params_20dp"
                    android:paddingTop="@dimen/params_2dp">

                    <TextView
                        style="@style/MyTextViewReview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="1" />

                    <ImageView
                        android:layout_width="@dimen/width_14dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/params_4dp"
                        android:layout_marginRight="@dimen/params_4dp"
                        app:srcCompat="@drawable/ic_star_black_24dp" />

                    <ProgressBar
                        android:id="@+id/progressBar_1"
                        style="@style/MyProgressBarReview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lv_reviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

</LinearLayout>