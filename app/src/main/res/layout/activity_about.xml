<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_white"
    android:backgroundTint="@color/global_white"
    android:orientation="vertical"
    tools:context="com.tuankhai.travelassistants.activity.AboutActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/aboutAct_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="@dimen/scroll_bar_size">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--ABOUT APP REDESIGN-->
            <android.support.v7.widget.CardView
                android:id="@+id/about_app_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_10dp"
                android:clickable="true"
                android:foreground="@drawable/ripple"
                android:paddingBottom="@dimen/padding_10dp"
                app:cardCornerRadius="@dimen/padding_1dp"
                app:cardElevation="@dimen/padding_5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/leafpic_header"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_150dp"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:padding="@dimen/padding_5dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_atm" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/about_app_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/padding_5dp"
                        android:text="LeafPic Gallery"
                        android:textColor="@color/global_white"
                        android:textSize="@dimen/size_24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/about_app_light_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/padding_5dp"
                        android:text="app_name"
                        android:textColor="@color/global_white"
                        android:textSize="@dimen/size_16sp" />

                    <TextView
                        android:id="@+id/about_version_item_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/padding_5dp"
                        android:text="v1.0"
                        android:textColor="@color/global_white"
                        android:textSize="@dimen/size_16sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--DONALD SHTJEFNI-->
            <android.support.v7.widget.CardView
                android:id="@+id/about_donald_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_10dp"
                android:clickable="true"
                android:foreground="@drawable/ripple"
                app:cardCornerRadius="@dimen/padding_1dp"
                app:cardElevation="@dimen/padding_5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/donald_header_img"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/donald_profile_img"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="105dp"
                            app:civ_border_width="1dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="158dp"
                            android:layout_toRightOf="@id/donald_profile_img"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/donald_shtjefni"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Donald Shtjefni"
                                android:textSize="@dimen/size_24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/donald_shtjefni_role"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="donald_role"
                                android:textSize="@dimen/size_16sp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/donald_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_20dp"
                        android:layout_marginRight="@dimen/padding_20dp"
                        android:layout_marginTop="@dimen/padding_20dp"
                        android:text="about_author_donald_description"
                        android:textSize="@dimen/size_16sp" />
                    <!--DONALD LINKS  -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_10dp">

                        <TextView
                            android:id="@+id/about_author_donald_mail_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ripple"
                            android:clickable="true"
                            android:padding="@dimen/padding_10dp"
                            android:text="send_email"
                            android:textSize="@dimen/size_16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/about_author_donald_googleplus_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ripple"
                            android:clickable="true"
                            android:padding="@dimen/padding_10dp"
                            android:text="GOOGLE +"
                            android:textSize="@dimen/size_16sp" />

                        <TextView
                            android:id="@+id/about_author_donald_github_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ripple"
                            android:clickable="true"
                            android:padding="@dimen/padding_10dp"
                            android:text="GITHUB"
                            android:textSize="@dimen/size_16sp" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--GILBERT NDRESAJ-->
