                            android:clickable="true"
                            android:padding="@dimen/padding_10dp"
                            android:text="send_email"
                            android:textSize="@dimen/size_16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/about_author_gilbert_googleplus_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ripple"
                            android:clickable="true"
                            android:padding="@dimen/padding_10dp"
                            android:text="GOOGLE +"
                            android:textSize="@dimen/size_16sp" />

                        <TextView
                            android:id="@+id/about_author_gilbert_github_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ripple"
                            android:clickable="true"
                            android:padding="@dimen/padding_10dp"
                            android:text="GITHUB"
                            android:textSize="@dimen/size_16sp" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--SPECIAL THANKS-->
            <android.support.v7.widget.CardView
                android:id="@+id/about_special_thanks_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_10dp"
                android:clickable="true"
                android:foreground="@drawable/ripple"
                app:cardCornerRadius="@dimen/padding_1dp"
                app:cardElevation="@dimen/padding_5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/about_special_thanks_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding_16dp"
                        android:paddingTop="@dimen/padding_16dp"
                        android:text="about_special_thanks"
                        android:textColor="@color/global_white"
                        android:textSize="@dimen/size_16sp"
