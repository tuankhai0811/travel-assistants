                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_8dp"
                            android:text="about_special_thanks_patryk_goworowski_sub"
                            android:textColor="@color/global_white"
                            android:textSize="@dimen/size_16sp" />

                        <TextView
                            android:id="@+id/about_community_members_sub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_8dp"
                            android:text="about_special_thanks_members_sub"
                            android:textColor="@color/global_white"
                            android:textSize="@dimen/size_16sp" />

                        <TextView
                            android:id="@+id/about_community_you_sub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/padding_16dp"
                            android:layout_marginTop="@dimen/padding_8dp"
                            android:text="about_special_thanks_you_sub"
                            android:textColor="@color/global_white"
                            android:textSize="@dimen/size_16sp" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--SUPPORT APP-->
            <android.support.v7.widget.CardView
                android:id="@+id/about_support_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_10dp"
                android:clickable="true"
