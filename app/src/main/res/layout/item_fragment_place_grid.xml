<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_layout_type_place">

        <ImageView
            android:id="@+id/img_item_fragment_place_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_image_type_travel"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_70"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_item_fragment_place_grid"
                style="@style/text_type_travel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Du lịch biển" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
