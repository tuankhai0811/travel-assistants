<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_white"
    tools:context="com.tuankhai.travelassistants.fragment.SearchResultFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lv_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/global_white" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_80dp"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/layout_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="@dimen/padding_150dp"
        android:visibility="visible">

        <ImageView
            android:layout_width="@dimen/width_logo"
            android:layout_height="@dimen/height_logo"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_20dp"
            android:scaleType="centerInside"
            android:src="@drawable/logo_small" />

        <TextView
            android:id="@+id/txt_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_place_search"
            android:textAllCaps="false"
            android:textColor="@color/global_black"
            android:textSize="@dimen/size_18sp" />
    </LinearLayout>

</FrameLayout>