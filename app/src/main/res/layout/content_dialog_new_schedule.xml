<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/params_20dp"
    android:layout_marginRight="@dimen/params_20dp"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/global_white"
        app:cardCornerRadius="@dimen/params_2dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_background"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingLeft="@dimen/params_10dp"
            android:paddingRight="@dimen/params_10dp">

            <TextView
                android:id="@+id/txt_title"
                fontPath="@string/font_boto_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/params_10dp"
                android:layout_marginTop="@dimen/params_15dp"
                android:layout_marginLeft="@dimen/params_5dp"
                android:text="Tạo lịch trình mới"
                android:textColor="@color/global_black"
                android:textSize="@dimen/size_16sp" />

            <EditText
                android:id="@+id/txt_name"
                fontPath="@string/font_boto_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/params_10dp"
                android:layout_marginLeft="@dimen/params_20dp"
                android:layout_marginRight="@dimen/params_20dp"
                android:layout_marginTop="@dimen/params_10dp"
                android:background="@drawable/bg_field_input"
                android:gravity="center"
                android:hint="Tên lịch trình"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:padding="@dimen/params_8dp"
                android:textColor="@color/global_black"
                android:textColorHint="@color/grey_50"
                android:textSize="@dimen/size_20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/params_20dp"
                android:layout_marginRight="@dimen/params_20dp"
                android:layout_marginTop="@dimen/params_10dp"
                android:orientation="horizontal">

                <TextView
                    fontPath="@string/font_boto_bold"
                    android:layout_width="@dimen/width_80dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/params_5dp"
                    android:text="Từ  ngày"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/size_16sp" />

                <TextView
                    android:id="@+id/txt_from_date"
                    fontPath="@string/font_boto_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/params_10dp"
                    android:background="@drawable/bg_field_input"
                    android:gravity="center"
                    android:padding="@dimen/params_8dp"
                    android:text="12/10/2017"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/size_16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/params_20dp"
                android:layout_marginLeft="@dimen/params_20dp"
                android:layout_marginRight="@dimen/params_20dp"
                android:layout_marginTop="@dimen/params_10dp"
                android:orientation="horizontal">

                <TextView
                    fontPath="@string/font_boto_bold"
                    android:layout_width="@dimen/width_80dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/params_5dp"
                    android:text="Đến ngày"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/size_16sp" />

                <TextView
                    android:id="@+id/txt_to_date"
                    fontPath="@string/font_boto_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/params_10dp"
                    android:background="@drawable/bg_field_input"
                    android:gravity="center"
                    android:padding="@dimen/params_8dp"
                    android:text="12/11/2017"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/size_16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/params_10dp"
                android:gravity="right">

                <Button
                    android:id="@+id/btn_cancel"
                    style="@style/ButtonDialog"
                    android:layout_marginRight="@dimen/params_10dp"
                    android:text="ĐÓNG" />

                <Button
                    android:id="@+id/btn_create"
                    style="@style/ButtonDialog"
                    android:paddingLeft="@dimen/params_10dp"
                    android:paddingRight="@dimen/params_10dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="TẠO LỊCH TRÌNH" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>