<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_50dp"
    android:layout_marginLeft="@dimen/margin_20dp"
    android:layout_marginRight="@dimen/margin_20dp"
    android:layout_marginTop="@dimen/margin_50dp"
    app:cardBackgroundColor="@color/global_white"
    app:cardCornerRadius="@dimen/padding_2dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/grey_background"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:minWidth="@dimen/width_dialog_new_schedule"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_15dp"
        android:paddingRight="@dimen/padding_15dp">

        <TextView
            android:id="@+id/txt_title"
            fontPath="@string/font_boto_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_15dp"
            android:text="Tạo lịch trình mới"
            android:textColor="@color/global_black"
            android:textSize="@dimen/size_16sp" />

        <EditText
            android:id="@+id/txt_name"
            fontPath="@string/font_boto_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_marginRight="@dimen/margin_20dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/bg_field_input"
            android:gravity="center"
            android:hint="Tên lịch trình"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:padding="@dimen/padding_8dp"
            android:textColor="@color/global_black"
            android:textSize="@dimen/size_20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_30dp"
            android:layout_marginRight="@dimen/margin_30dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:orientation="horizontal">

            <TextView
                fontPath="@string/font_boto_bold"
                android:layout_width="@dimen/width_80dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_5dp"
                android:text="Từ  ngày"
                android:textColor="@color/global_black"
                android:textSize="@dimen/size_16sp" />

            <TextView
                android:id="@+id/txt_from_date"
                fontPath="@string/font_boto_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:background="@drawable/bg_field_input"
                android:gravity="center"
                android:padding="@dimen/padding_8dp"
                android:text="12/10/2017"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/size_16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_30dp"
            android:layout_marginLeft="@dimen/margin_30dp"
            android:layout_marginRight="@dimen/margin_30dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:orientation="horizontal">

            <TextView
                fontPath="@string/font_boto_bold"
                android:layout_width="@dimen/width_80dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_5dp"
                android:text="Đến ngày"
                android:textColor="@color/global_black"
                android:textSize="@dimen/size_16sp" />

            <TextView
                android:id="@+id/txt_to_date"
                fontPath="@string/font_boto_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:background="@drawable/bg_field_input"
                android:gravity="center"
                android:padding="@dimen/padding_8dp"
                android:text="12/11/2017"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/size_16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10dp"
            android:gravity="right">

            <Button
                android:id="@+id/btn_cancel"
                style="@style/ButtonDialog"
                android:layout_width="wrap_content"
                android:text="ĐÓNG"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/btn_create"
                style="@style/ButtonDialog"
                android:layout_width="wrap_content"
                android:text="TẠO LỊCH TRÌNH"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>