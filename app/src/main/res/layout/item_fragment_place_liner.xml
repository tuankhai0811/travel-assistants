<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_image_type_travel_2">

        <ImageView
            android:id="@+id/img_item_fragment_place_liner"
            app:srcCompat="@drawable/bg_sea_travel"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/gray_10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_item_fragment_place_liner"
                style="@style/text_type_travel_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mùa xuân" />

        </LinearLayout>
    </FrameLayout>

</LinearLayout>