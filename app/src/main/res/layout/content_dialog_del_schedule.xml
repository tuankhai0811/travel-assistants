<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_50dp"
    android:layout_marginLeft="@dimen/margin_20dp"
    android:layout_marginRight="@dimen/margin_20dp"
    android:layout_marginTop="@dimen/margin_50dp"
    app:cardBackgroundColor="@color/global_white"
    app:cardCornerRadius="@dimen/padding_2dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/grey_background"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:minWidth="@dimen/width_dialog_new_schedule"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_15dp"
        android:paddingRight="@dimen/padding_15dp">

        <TextView
            android:id="@+id/txt_name_del"
            fontPath="@string/font_boto_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_25dp"
            android:layout_marginTop="@dimen/margin_40dp"
            android:gravity="center"
            android:text="Tạo lịch trình mới"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/size_18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10dp"
            android:gravity="right">

            <Button
                android:id="@+id/btn_cancel_del"
                style="@style/ButtonDialog"
                android:layout_width="@dimen/width_70dp"
                android:text="HỦY"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/btn_delete"
                style="@style/ButtonDialog"
                android:layout_width="@dimen/width_70dp"
                android:text="XÓA"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>