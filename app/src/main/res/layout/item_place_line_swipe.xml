<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="@color/global_white"
        app:cardCornerRadius="2dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10dp"
            android:orientation="vertical">

            <com.tuankhai.swipelayout.SwipeLayout
                android:id="@+id/swipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_30">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:background="@color/grey_30"
                    android:gravity="center">

                    <com.tuankhai.likebutton.LikeButton
                        android:id="@+id/heart_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:anim_scale_factor="3"
                        app:icon_size="@dimen/size_38dp"
                        app:icon_type="heart" />
                </LinearLayout>

                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:orientation="horizontal"-->
                <!--android:weightSum="2">-->

                <!--<LinearLayout-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_weight="2" />-->

                <!---->

                <!--</LinearLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="0dp"
                        android:elevation="0dp"
                        card_view:cardCornerRadius="0dp">

                        <RelativeLayout
                            android:id="@+id/layout_item_place"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_layout_item_place_table"
                            android:background="@drawable/bg_place_global_16_10">

                            <ImageView
                                android:id="@+id/img_item_place"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/height_layout_item_place_table"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/bg_place_global_16_10" />

                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

            </com.tuankhai.swipelayout.SwipeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_8dp">

                <TextView
                    android:id="@+id/txt_item_name_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/padding_3dp"
                    android:paddingRight="@dimen/padding_10dp"
                    android:text="Khu du lịch Suối tiên"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/size_18sp" />

                <com.tuankhai.ratingbar.MaterialRatingBar
                    android:id="@+id/ratingBar"
                    style="@style/Widget.MaterialRatingBar.RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginRight="-3dp"
                    android:isIndicator="true"
                    android:maxHeight="@dimen/height_24dp"
                    android:minHeight="@dimen/height_24dp"
                    android:progressBackgroundTint="@color/colorPrimary"
                    android:rating="0"
                    app:mrb_progressTint="@color/colorPrimary"
                    app:mrb_secondaryProgressTint="@color/colorPrimary" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>