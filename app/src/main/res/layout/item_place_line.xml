<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        android:elevation="0dp"
        card_view:cardCornerRadius="0dp">

        <RelativeLayout
            android:id="@+id/layout_item_place"
            android:layout_width="match_parent"
            android:background="@drawable/bg_place_global_16_10"
            android:layout_height="@dimen/height_layout_item_place_table">

            <ImageView
                android:id="@+id/img_item_place"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_layout_item_place_table"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/bg_place_global_16_10" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/gray_70"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_item_name_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingBottom="10dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:paddingTop="10dp"
                    android:text="Khu du lịch Suối tiên"
                    android:textColor="@color/global_white"
                    android:textSize="22sp" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>