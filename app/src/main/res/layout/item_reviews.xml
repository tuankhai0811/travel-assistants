<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="@drawable/ripple"
    android:orientation="vertical"
    android:padding="@dimen/padding_10dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/global_black" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_user"
                    android:layout_width="@dimen/width_46dp"
                    android:layout_height="@dimen/width_46dp"
                    app:civ_border_color="@color/global_white"
                    app:civ_border_width="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_10dp">

                <TextView
                    android:id="@+id/txt_name"
                    fontPath="@string/font_boto_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Khai Tran"
                    android:textAllCaps="false"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/size_16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.tuankhai.travelassistants.library.ratingbar.MaterialRatingBar
                        android:id="@+id/ratingBar"
                        style="@style/Widget.MaterialRatingBar.RatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-3dp"
                        android:layout_marginRight="-3dp"
                        android:isIndicator="true"
                        android:maxHeight="@dimen/height_18dp"
                        android:minHeight="@dimen/height_18dp"
                        android:progressBackgroundTint="@color/colorPrimary"
                        android:progressTint="@color/colorPrimary"
                        android:rating="0"
                        app:mrb_progressTint="@color/colorPrimary"
                        app:mrb_secondaryProgressTint="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/txt_time_review"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="@dimen/padding_10dp"
                        android:text="1 thang truoc"
                        android:textAllCaps="false"
                        android:textColor="@color/grey_80"
                        android:textSize="@dimen/size_14sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_option_menu"
                android:layout_width="@dimen/padding_26dp"
                android:layout_height="@dimen/padding_26dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/ico_three_dots"
                android:visibility="visible" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_10dp"
            android:paddingLeft="@dimen/padding_23dp"
            android:paddingTop="@dimen/padding_10dp"
            android:textAllCaps="false"
            android:textColor="@color/global_black"
            android:textSize="@dimen/size_16sp" />
    </LinearLayout>

</LinearLayout>