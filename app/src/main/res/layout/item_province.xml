<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="@dimen/height_icon_province"
            android:layout_height="@dimen/height_icon_province"
            android:layout_margin="@dimen/margin_icon_province"
            android:gravity="center"
            android:textSize="@dimen/size_icon_province"
            android:textColor="@color/globalwhite"
            android:background="@drawable/bg_random_1"
            android:text="K" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>
</LinearLayout>