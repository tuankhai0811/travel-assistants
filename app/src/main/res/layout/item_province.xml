<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_item_province"
        android:layout_width="@dimen/width_layout_item_province"
        android:layout_height="@dimen/height_layout_item_province"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_item_icon_province"
            android:layout_width="@dimen/height_icon_province"
            android:layout_height="@dimen/height_icon_province"
            android:layout_margin="@dimen/margin_icon_province"
            android:background="@drawable/bg_random_1"
            android:gravity="center"
            android:text="K"
            android:textColor="@color/global_white"
            android:textSize="@dimen/size_icon_province" />

        <TextView
            android:id="@+id/txt_item_name_province"
            android:layout_width="@dimen/width_layout_item_province"
            android:layout_height="@dimen/height_text_province"
            android:gravity="center"
            android:paddingRight="2dp"
            android:paddingLeft="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Hồ Chí Minh Minh"
            android:textColor="@color/global_white"
            android:textSize="@dimen/size_text_province" />
    </LinearLayout>
</LinearLayout>