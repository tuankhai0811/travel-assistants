<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material_light"
    android:orientation="vertical"
    tools:context="com.tuankhai.travelassistants.activity.DetailPlaceActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_slider_image"
        android:layout_marginBottom="8dp"
        android:background="@color/gray_70"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_slider_image">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">

                <com.tuankhai.loopingviewpager.LoopViewPager
                    android:id="@+id/viewpagerImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_slider_image" />

                <com.tuankhai.loopingviewpager.CircleIndicator
                    android:id="@+id/indicatorImage"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="40dp"
                    android:gravity="bottom|right" />

            </FrameLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="16dp"
            android:paddingLeft="76dp"
            android:text="Ninh Thuan"
            android:textColor="@color/global_white"
            android:textSize="24sp" />

        <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:theme="@style/ActionBarThemeOverlay"
            app:popupTheme="@style/ActionBarPopupThemeOverlay" />

    </RelativeLayout>


</LinearLayout>
