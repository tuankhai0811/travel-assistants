<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.DetailPlaceActivity"
    tools:showIn="@layout/activity_detail_place">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:paddingLeft="@dimen/padding_10dp"-->
                <!--android:paddingTop="@dimen/padding_10dp"-->
                <!--android:text="@string/rating"-->
                <!--android:textAllCaps="false"-->
                <!--android:textColor="@color/grey"-->
                <!--android:textSize="@dimen/size_16sp"-->
                <!--android:textStyle="normal" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/padding_10dp"
                    android:paddingLeft="@dimen/padding_10dp"
                    android:paddingTop="@dimen/padding_15dp">

                    <com.tuankhai.ratingbar.MaterialRatingBar
                        android:id="@+id/ratingBar"
                        style="@style/Widget.MaterialRatingBar.RatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-3dp"
                        android:layout_marginRight="-3dp"
                        android:isIndicator="true"
                        android:maxHeight="28dp"
                        android:minHeight="28dp"
                        android:progressBackgroundTint="@color/colorPrimary"
                        android:rating="0"
                        app:mrb_progressTint="@color/colorPrimary"
                        app:mrb_secondaryProgressTint="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/txt_num_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text=""
                        android:textColor="@color/grey"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_10dp"
                android:paddingLeft="@dimen/padding_10dp"
                android:text="@string/information"
                android:textAllCaps="false"
                android:textColor="@color/grey"
                android:textSize="@dimen/size_16sp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dilivers_view"
                    android:background="@color/grey_50" />

                <FrameLayout
                    android:id="@+id/layout_static_maps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/img_static_maps"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_150dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/bg_autumn" />

                    <ImageView
                        android:layout_width="@dimen/width_80dp"
                        android:layout_height="@dimen/height_30dp"
                        android:layout_gravity="left|bottom"
                        android:padding="@dimen/padding_5dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/logo_google" />

                    <ImageView
                        android:layout_width="@dimen/width_40dp"
                        android:layout_height="@dimen/height_40dp"
                        android:layout_gravity="right|top"
                        android:layout_margin="@dimen/margin_10dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_gps" />
                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dilivers_view"
                    android:background="@color/grey_50" />

                <LinearLayout
                    android:id="@+id/layout_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/padding_15dp"
                        android:paddingLeft="@dimen/padding_10dp"
                        android:paddingTop="@dimen/padding_15dp">

                        <ImageView
                            android:id="@+id/imageAddress"
                            android:layout_width="@dimen/height_24dp"
                            android:layout_height="@dimen/height_24dp"
                            app:srcCompat="@drawable/ic_location" />

                        <TextView
                            android:id="@+id/txt_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/padding_10dp"
                            android:paddingRight="@dimen/padding_10dp"
                            android:text=""
                            android:textAllCaps="false"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/size_16sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dilivers_view"
                        android:background="@color/grey_50" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/padding_15dp"
                        android:paddingLeft="@dimen/padding_10dp"
                        android:paddingTop="@dimen/padding_15dp">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="@dimen/height_24dp"
                            android:layout_height="@dimen/height_24dp"
                            app:srcCompat="@drawable/ic_website" />

                        <TextView
                            android:id="@+id/txt_website"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/padding_10dp"
                            android:text="http://news.zing.vn"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/size_16sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dilivers_view"
                        android:background="@color/grey_50" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/padding_15dp"
                        android:paddingLeft="@dimen/padding_10dp"
                        android:paddingTop="@dimen/padding_15dp">

                        <ImageView
                            android:layout_width="@dimen/height_24dp"
                            android:layout_height="@dimen/height_24dp"
                            app:srcCompat="@drawable/ic_tel" />

                        <TextView
                            android:id="@+id/txt_tel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/padding_10dp"
                            android:text="+84987075305"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/size_16sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dilivers_view"
                        android:background="@color/grey_50" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_list_food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_layout_detail">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/top_restaurent"
                        android:textAllCaps="false"
                        android:textColor="@color/grey"
                        android:textSize="17sp" />

                    <com.tuankhai.ripple.MaterialRippleLayout
                        android:id="@+id/layout_more_food"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        app:kt_rippleColor="@color/grey_10"
                        app:kt_rippleDuration="10"
                        app:kt_rippleHover="true">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="2dp"
                                android:text="@string/view_all"
                                android:textAllCaps="false"
                                android:textColor="@color/grey"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:paddingTop="1dp"
                                app:srcCompat="@drawable/ic_arrow_button" />
                        </LinearLayout>
                    </com.tuankhai.ripple.MaterialRippleLayout>
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/lv_food"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_list_hotel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_layout_detail">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/top_hotel"
                        android:textAllCaps="false"
                        android:textColor="@color/grey"
                        android:textSize="17sp" />

                    <com.tuankhai.ripple.MaterialRippleLayout
                        android:id="@+id/layout_more_hotel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        app:kt_rippleColor="@color/grey_10"
                        app:kt_rippleDuration="10"
                        app:kt_rippleHover="true">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="2dp"
                                android:text="@string/view_all"
                                android:textAllCaps="false"
                                android:textColor="@color/grey"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:paddingTop="1dp"
                                app:srcCompat="@drawable/ic_arrow_button" />
                        </LinearLayout>
                    </com.tuankhai.ripple.MaterialRippleLayout>
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/lv_hotel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <include layout="@layout/content_reviews" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
