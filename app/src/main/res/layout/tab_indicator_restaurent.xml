<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_des"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="right|center"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_0dp"
        android:layout_marginLeft="@dimen/padding_20dp"
        android:layout_marginRight="@dimen/padding_5dp"
        android:layout_marginTop="@dimen/padding_0dp"
        app:cardCornerRadius="@dimen/padding_5dp"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/txt_tab_restaurent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="@dimen/padding_10dp"
            android:text="Nhà hàng"
            android:textAllCaps="true"
            android:textColor="@color/global_white"
            android:textSize="16sp" />
    </android.support.v7.widget.CardView>
</LinearLayout>